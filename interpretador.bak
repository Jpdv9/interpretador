;; Especificación Léxica

(define scanner-spec-simple-interpreter
  '((white-sp
     (whitespace) skip)
    (comment
     ("%" (arbno (not #\newline))) skip)
    (identificador
     ("@" letter (arbno (or letter digit "_")))  symbol)
    (numero
     (digit (arbno digit)) number)
    (numero
     ("-" digit (arbno digit)) number)
    (numero
    (digit (arbno digit) "." digit (arbno digit)) number)
    (numero
     ("-" digit (arbno digit) "." digit (arbno digit)) number)
    (texto
      ("\"" (arbno letter) "\"") string)
    ))

